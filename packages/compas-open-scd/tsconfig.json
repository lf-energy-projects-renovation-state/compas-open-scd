{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "out-tsc",
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "paths": {
      "@compas-oscd/core": [
        "../../node_modules/@compas-oscd/core/dist/foundation.d.ts"
      ],
      "@compas-oscd/core/*": ["../../node_modules/@compas-oscd/core/dist/*"],
      "@openscd/core": [
        "../../node_modules/@compas-oscd/core/dist/foundation.d.ts"
      ],
      "@openscd/core/*": ["../../node_modules/@compas-oscd/core/dist/*"]
    }
  },
  "include": ["**/*.ts"]
}
